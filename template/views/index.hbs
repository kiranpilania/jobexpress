    <style>

        .Card {
            border: 1px solid black;
            border-radius: 100px;
            padding: 0px 5px;
            width: 120px;
            margin: 30px;
        }


        .slide-container {
            display: flex;
            width: calc(250px * 4);
            animation: scroll 20s linear infinite;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(calc(-250px * 4));
            }
        }

        .slide-image {
            display: flex;
            align-items: center;
            padding: 15px;
        }
    </style>



</head>

